{% extends 'VictoireCoreBundle:Widget:new.html.twig' %}

{% block form_static %}
    {{ form_start(form) }}

    <div class="vic-row">
        <div class="vic-col-xs-4">
            {{ form_row(form.title) }}
            {{ form_row(form.icon) }}

            {{ form_row(form.hoverTitle) }}
        </div>

        <div class="vic-col-xs-4">
            {{ form_row(form.size) }}

            {{ form_row(form.style) }}

            <div class="vic-clearfix">
                {{ form_widget(form.isBlock) }}
            </div>

            <div class="vic-clearfix">
                {{ form_widget(form.isCallToAction) }}
            </div>

            <div class="vic-clearfix">
                {{ form_widget(form.tooltipable) }}
            </div>
        </div>

        <div class="vic-col-xs-4">
            {{ form_widget(form.link) }}
        </div>

        {{ form_rest(form) }}
    </div>

    {{ form_end(form) }}
{% endblock %}
